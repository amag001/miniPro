 <view class="cates">
     <SearchInput></SearchInput>
     <view class="cates_container">
        <!-- 左侧菜单栏 -->
        <scroll-view class="left_menu " scroll-y="{{true}}">
            <view class="menu_item {{index == currentIndex?'active':''}}" wx:for="{{leftMeauList}}" wx:key="*this" bindtap='handleItemTap' data-index = "{{index}}">
                {{item}}
            </view>
        </scroll-view>
        <!-- 右侧商品 -->
         <scroll-view class="right_content" scroll-y="{{true}}" scroll-top="{{scrollTop}}">
             <view class="goods_group" wx:for="{{rightContent}}"
             wx:for-item="item1" wx:for-index="index1" wx:key="*this">
                 <view class="goods_title">
                     <text class="delimiter">/</text>
                    <text class="title">{{item1.cat_name}}</text>
                     <text class="delimiter">/</text>
                 </view>
                 <view class="goods_list">
                     <navigator 
                     wx:for="{{item1.children}}"
                     wx:for-item="item2"
                     wx:for-index="index2"
                     wx:key="cat_id"
                     url="/pages/goods_list/index?cid={{item2.cat_id}}" >
                         <image mode="widthFix" src="{{item2.cat_icon}}"></image>
                         <view class="goods_name">{{item2.cat_name}}</view>
                     </navigator>
                 </view>
             </view>
        </scroll-view>
     </view>
 </view>
   